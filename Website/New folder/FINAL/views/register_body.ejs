
<!-- include header -->
<%-include('include/_register-header')%>
<!-- include header -->
<div class="sign-up-container">
    <div class="sign-up-header">
        <h3 class="text">TOOTHFULLY YOURS</h3>
        <P class="text">Dental Clinic</P>
    </div>

    <div class="sign-up-body">
        <div class="row1">
            <h3>Create An Account</h3>
            <div class="social-media-icons">
                <img class="facebook" src="/img/facebook-icon.png">
                <img class="twitter" src="/img/twitter-icon.png">
            </div>
        </div>
        <form action="/route/register" method="POST" onsubmit="validateForm()" name="myForm" required >

            <div class="form-group">
                    <input type="text" id="username" minlength="6" maxlength="12" name="p_username" v-model:value="p_username" pattern="[A-Za-z0-9]+" onkeydown="if(['Space'].includes(arguments[0].code)){return false;}" placeholder="Username" >
                    <input type="email" name="p_email" placeholder="email@example">
                    <input type="password" id="p1" minlength="5" name="p_password" placeholder="Password" onkeyup="verification();">
                    <input type="password" id="p2" name="p_cpassword" placeholder="Confirm Password" onkeyup="verification();">            
                    <span id="Message"></span>
            </div>

            <div class="form-group">
                <div class="terms-services">
                    <input class="check" name="terms "type="checkbox" >
                    <p>I agree in all statements in <a href="">Terms & Services.</a></p>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" value="submit" class="Confirm">Confirm</button>
            </div> 

        </form>
       
        <div class="row5">
           <a href="/route/login">Already a registered user?</a>
        </div>
    </div>

</div>

</div>


<!-- include footer -->
<%-include('include/_footer')%>
