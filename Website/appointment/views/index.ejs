 <!-- Main Site --> 
 <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between mb-1">
            
            <h2 class="text-uppercase text-style">Pending Appointments</h2>
            <div class="input-icon">
                <input type="text" class="search-bar" placeholder="Search..." id="search-box" onkeyup="sendData(this)"> 
                <i class="fa-solid fa-magnifying-glass icon"></i>
            </div>
           
         
        </div>

        <!-- form handling-->
     
<form action="/" method="POST">
    <div class="table-container">
            <table id="add-appointment" class="fixed_header">
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>ID</th>
                        <th>Patient Name</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Procedure</th>  
                        <th>Contact Number</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody id="myTable">
                     <%-include('include/_show')%>
                </tbody>
            </table>
        </div>
        </form>
        <div class="d-flex jc-end white-container pd-2">
        <button class="add-app-btn">
                <a href="/add-appointment" class=" d-flex al-center">
                    <i class="fa-solid fa-circle-plus mr-1 pd-1"> </i>
                    <div class="name-btn text-uppercase ">Add Appointment</div>
                </a>
        </button>    
    </div>
   </main>
