            <table id="add-history">
                <thead class="">
                    <tr>
                        <th>No.</th>
                        <th>Trans. No.</th>
                        <th>Date</th>
                        <th>Tooth No.</th>
                        <th>Procedure</th>
                        <th>Payments</th>
                        <th> </th>
                    </tr>
                </thead>
                    <tbody id="myTable">
                        <%-include('include/_show-history') %>
                    </tbody>
               
            </table>
        </form>
    </div>
    <div class="history-button jc-end">
        <button class="btn-history">
                <a href="/add-history" class=" d-flex al-center">
                    <div class="name-btn text-uppercase ">Add Patient History</div>
                </a>
        </button>    
    </div>
